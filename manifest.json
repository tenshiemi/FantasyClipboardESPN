{
  "manifest_version": 2,

  "name": "Fantasy Clipper ESPN",
  "version": "1.0",
  "description": "Copy your Fantasy players to the clipboard.",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  
  "permissions": [
    "http://games.espn.go.com/",
    "clipboardRead",
    "clipboardWrite"
    ]
}